[global]
	# Display
	monitor = 0
	follow = mouse
	width = 350
	height = 100
	origin = top-right
	offset = 12x12
	notification_limit = 5
	indicate_hidden = yes

	# Appearance
	transparency = 0
	separator_height = 2
	padding = 12
	horizontal_padding = 12
	frame_width = 2
	frame_color = "#6272a4"
	separator_color = frame
	corner_radius = 6
	font = monospace 10

	# Behavior
	sort = yes
	idle_threshold = 120
	show_age_threshold = 30
	markup = full
	format = "<b>%s</b>\n%b"
	alignment = left
	show_indicators = yes
	word_wrap = yes
	icon_position = left
	max_icon_size = 48

	# History
	sticky_history = yes
	history_length = 20

	# Mouse actions
	mouse_left_click = close_current
	mouse_middle_click = do_action, close_current
	mouse_right_click = close_all


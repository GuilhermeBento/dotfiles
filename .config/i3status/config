# i3status configuration
# https://i3wm.org/i3status/manpage.html

general {
	colors = true
	color_good = "#50fa7b"
	color_degraded = "#f1fa8c"
	color_bad = "#ff5555"
	interval = 5
}

order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

disk "/" {
	format = " %avail"
}

wireless _first_ {
	format_up = " %essid %ip"
	format_down = " down"
}

ethernet _first_ {
	format_up = " %ip"
	format_down = ""
}

battery all {
	format = "%status %percentage %remaining"
	format_down = ""
	status_chr = ""
	status_bat = ""
	status_full = ""
	low_threshold = 20
	threshold_type = percentage
}

volume master {
	format = " %volume"
	format_muted = " muted"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
	format = " %a %d %b  %H:%M"
}
